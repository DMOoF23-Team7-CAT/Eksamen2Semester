<Application x:Class="KlatreKongen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:KlatreKongen"
             xmlns:ViewModel="clr-namespace:KlatreKongen.MVVM.ViewModel"
             xmlns:View="clr-namespace:KlatreKongen.MVVM.View"
             StartupUri="View\MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="View/Themes/MenuButtonTheme.xaml" />
                
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type ViewModel:StartViewModel}">
                <View:StartView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type ViewModel:OverviewViewModel}">
                <View:OverviewView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type ViewModel:CustomerViewModel}">
                <View:CustomerView />
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
